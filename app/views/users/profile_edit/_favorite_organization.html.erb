<% org_type = favorite_organization.organization.org_type %>
<div class="fav-org">
  <%= form.fields_for :user_favorite_organizations, favorite_organization do |fav_org_fields| %>
    <div class="fav-org__header">
      <%= fa_icon "#{cause_logos[org_type]} 2x", class: "fav-org__logo" %> <!-- place hoolder for now -->
      <div class="fav-org__name_and_type">
        <div class="fav-org__name"> <%= favorite_organization.organization.name %> </div>
        <%= render "shared/org_type_oval", org_type: org_type %>
        <%= fa_icon "tags" %>
      </div>
      <div class="favorite-text"> Favorite </div> <!-- What is the point of the tag? -->
    </div>
    <%= fav_org_fields.text_area :description, class: "form-control fav-org__description" %>
    <%= fav_org_fields.hidden_field :id, class: "fav-org__id" %>
  <% end %>
</div>
