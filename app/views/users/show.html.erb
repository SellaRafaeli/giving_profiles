<%= javascript_include_tag "users/profile" %>
<div class="user-profile container-fluid">
  <% if flash[:success] %>
    <div class="profile-flash__container">
      <%= render("shared/flash", type: "success", content: flash[:success]) %>
    </div>
  <% end %>
  <%= render template: "layouts/user_header" %>
  <div class="profile-body profile-sections container-fluid">
    <%= render "users/profile_sections/badges" %>
    <%= render "users/profile_sections/donations_by_causes" %>
    <%= render "users/profile_sections/past_donations" %>
    <%= render "users/profile_sections/philosophy" %>
    <%= render "users/profile_sections/favorite_organizations" %>
  </div>
</div>
