%>
<section class='org_page ct col-md-8 col-md-offset-2'>
<h1> <%= org[:name]%> </h1>
<h4><%=org['type'].to_s.titleize || 'No Type' %> <a href='http://<%=org['website']%>'><%=org['url'] %></a></h4>

<% if false %>
<div class='card1'>
  <h5> Organization Badges </h5>
  <div class='badges'>
    <!-- <img src='/img/badge1.jpeg'/> -->
  </div>
</div>
<% end %>

<div class='card1'>
  <h5> Donors </h5>
  <div class='donors'>
    <% org_donors(org).each do |user| %>
    <span style='display: inline-flex; flex-direction: column;'>
      <a href='/users/<%=user['nick']%>'><img src='<%=user['pic_url']%>'/></a>
    </span>
    <% end %>
  </div>
</div>


<div>
<a class='btn btn-warning btn-raised' href='/orgs/edit/<%=org[:_id]%>'>Edit</a>
</div>

</section>